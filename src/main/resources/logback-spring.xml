<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>

    <!-- Console Appender with JSON formatting for Logstash -->
    <appender name="CONSOLE_JSON" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <includeMdcKeyName>traceId</includeMdcKeyName>
            <includeMdcKeyName>spanId</includeMdcKeyName>
            <customFields>{"app":"elk-test-app","environment":"kubernetes"}</customFields>
        </encoder>
    </appender>

    <!-- File Appender with JSON formatting (optional, for debugging) -->
    <appender name="FILE_JSON" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>/var/log/app/elk-test-app.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>/var/log/app/elk-test-app.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>7</maxHistory>
        </rollingPolicy>
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <customFields>{"app":"elk-test-app","environment":"kubernetes"}</customFields>
        </encoder>
    </appender>

    <!-- Root Logger -->
    <root level="INFO">
        <appender-ref ref="CONSOLE_JSON"/>
        <!-- Uncomment the line below if you want file logging in addition to console -->
        <!-- <appender-ref ref="FILE_JSON"/> -->
    </root>

    <!-- Application-specific logging -->
    <logger name="com.homelab.elktest" level="DEBUG"/>
</configuration>
